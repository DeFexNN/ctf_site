---
interface Props {
  title: string;
  date: Date;
  description?: string;
  tags: string[];
  slug: string;
}

const { title, date, description, tags, slug } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
---

<a
  href={`${import.meta.env.BASE_URL}blog/${slug}`}
  class="blog-card group block glass rounded-xl p-6 border border-glass-border hover:border-neon-purple/40 transition-all duration-300 reveal"
>
  <!-- Date -->
  <p class="font-mono text-[10px] text-text-muted mb-3">
    {formattedDate}
  </p>

  <!-- Title -->
  <h3 class="font-mono text-base font-semibold text-white mb-3 group-hover:text-neon-purple transition-colors duration-300">
    {title}
  </h3>

  <!-- Description -->
  {description && (
    <p class="text-sm text-text-muted mb-4 line-clamp-2 leading-relaxed">
      {description}
    </p>
  )}

  <!-- Tags -->
  <div class="flex flex-wrap gap-1.5">
    {tags.slice(0, 4).map((tag) => (
      <span class="font-mono text-[10px] rounded bg-surface-light text-text-muted border border-glass-border" style="padding: 0.25rem 0.6rem;">
        #{tag}
      </span>
    ))}
  </div>
</a>
